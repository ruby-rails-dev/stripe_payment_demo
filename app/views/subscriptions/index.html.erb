

<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Price</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.desc %></td>
        <td><%= number_to_currency(product.price) %></td>
         <td><%=image_tag product.photo.url(:small)%></td>
         <td><%= link_to 'Payment', new_subscription_path(:product => product.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>




 